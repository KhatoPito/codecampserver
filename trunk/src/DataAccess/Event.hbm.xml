<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                  namespace="MvcBook.EventManager.Domain.Model"
                  assembly="MvcBook.EventManager.Domain" default-access="field.camelcase-underscore"  >

	<class name="Event" table="Events">

		<id name="Id" type="Guid" column="Id">
			<generator class="guid.comb" />
		</id>

		<property name="Key" column="[Key]" type="String" length="25" not-null="true"/>
		<property name="Name" column="[Name]" type="String" length="200" not-null="true"/>
		<property name="StartDate" column="StartDate" type="DateTime" />
		<property name="EndDate" column="EndDate" type="DateTime"/>
		<property name="SponsorInfoHtml" column="SponsorInfo" type="StringClob"/>
		<component name="Location" class="Location">
			<property name="Name" column="LocationName" type="String" length="25"/>
			<property name="Address1" column="LocationAddress1" type="String" length="4000"/>
			<property name="Address2" column="LocationAddress2" type="String" length="4000"/>
			<property name="PhoneNumber" column="LocationPhoneNumber" type="String" length="12"/>
		</component>
		
	</class>

</hibernate-mapping>