<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                  namespace="MvcBook.EventManager.Domain.Model"
                  assembly="MvcBook.EventManager.Domain" default-access="field.camelcase-underscore"  >

	<class name="Attendee" table="Attendees">
		<id name="Id" column="Id" type="Guid">
			<generator class="guid.comb"/>
		</id>

		<many-to-one name="Event" class="Event" column="EventId" not-null="true"/>
		<property name="Name" column="Name" type="String" length="50" not-null="true"/>
		<property name="Website" column="Website" type="String" length="4000" not-null="true"/>
		<property name="Comment" column="Comment" type="String" length="4000" not-null="true"/>

	</class>

</hibernate-mapping>