<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                  namespace="CodeCampServer.Model.Domain"
                  assembly="CodeCampServer.Model" default-access="field.camelcase-underscore"  >

	<class name="Role" table="Roles">
    <!-- Called RoleId instead of Id to avoid problem naming constraints in the database -->
    <id name="Id" column="Id" type="Guid">
			<generator class="guid.comb"/>
		</id>
    <many-to-one name="Person" class="Person" column="PersonId" cascade="all"/>
	</class>

</hibernate-mapping>
