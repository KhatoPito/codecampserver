<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
									namespace="CodeCampServer.Core.Domain.Model"
									assembly="CodeCampServer.Core">

  <joined-subclass name="Meeting" extends="Event" table="Meetings" dynamic-update="true">
    <key column="Id"/>
    <property name="Topic" length="500"/>
    <property name="Summary" length="500"/>
    <property name="SpeakerName"/>
    <property name="SpeakerBio" length="500"/>
    <property name="SpeakerUrl" length="255"/>
  </joined-subclass>
</hibernate-mapping>
