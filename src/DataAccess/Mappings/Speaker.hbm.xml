<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                  namespace="CodeCampServer.Model.Domain"
                  assembly="CodeCampServer.Model" default-access="field.camelcase-underscore"  >

  <joined-subclass name="Speaker" table="Speakers" extends="Role">
    <!-- Called RoleId instead of Id to avoid problem naming constraints in the database -->
    <key column="Id"/>
    
    <property name="DisplayName" length="60" not-null="true" unique="true"/>
    <property name="AvatarUrl" length="200" not-null="false"/>
    <property name="Profile" not-null="false"/>
  </joined-subclass>

</hibernate-mapping>
