<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                  namespace="CodeCampServer.Model.Domain"
                  assembly="CodeCampServer.Model" default-access="field.camelcase-underscore"  >

	<class name="Session" table="Sessions">

		<id name="Id" type="Guid" column="Id">
			<generator class="guid.comb" />
		</id>

    <many-to-one name="Conference" class="Conference" column="ConferenceId" not-null="true"/>
		<property name="Title" length="200" not-null="true"/>
		<property name="Abstract" not-null="false"/>
		<property name="IsApproved" not-null="true"/>
		<many-to-one name="Speaker" class="Person" column="SpeakerId" not-null="true" />
		<many-to-one name="Track" class="Track" column="TrackId" not-null="false" />
	</class>

</hibernate-mapping>
