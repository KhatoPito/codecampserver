<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
									namespace="CodeCampServer.Core.Domain.Model"
									assembly="CodeCampServer.Core">

	<class name="Speaker" table="Speakers">
		<cache usage="read-write"/>
		<id name="Id" column="Id" type="Guid">
			<generator class="guid.comb"/>
		</id>
		<property name="Key" column="SpeakerKey" length="25"/>
		<property name="FirstName" length="100"/>
		<property name="LastName" length="100"/>
		<property name="Company" length="100"/>
		<property name="EmailAddress" length="100"/>
		<property name="JobTitle" length="100"/>
		<property name="Bio" length="3000"/>
		<property name="WebsiteUrl" length="400"/>
	</class>
</hibernate-mapping>